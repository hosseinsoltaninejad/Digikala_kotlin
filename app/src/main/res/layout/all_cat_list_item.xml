<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/shape_all_cat_list_item_bg"
    android:layout_height="wrap_content">

    <ir.hossein.digikala_kotlin.costum.MyImageView
        android:id="@+id/img_allCatListItem"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:textSize="12sp"
        android:minLines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:id="@+id/txt_allCatListItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="موبایل"
        app:layout_constraintEnd_toEndOf="@+id/img_allCatListItem"
        app:layout_constraintStart_toStartOf="@+id/img_allCatListItem"
        app:layout_constraintTop_toBottomOf="@+id/img_allCatListItem" />

    <TextView
        android:textSize="10sp"
        android:textColor="@color/black"
        android:id="@+id/txt_allCatListItem_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="5000 کالا"
        app:layout_constraintEnd_toEndOf="@+id/txt_allCatListItem_title"
        app:layout_constraintStart_toStartOf="@+id/txt_allCatListItem_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_allCatListItem_title" />
</androidx.constraintlayout.widget.ConstraintLayout>